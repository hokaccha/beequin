{
  "name": "Beequin",
  "version": "1.0.0",
  "private": true,
  "main": "out/main/index.js",
  "scripts": {
    "clean": "rm -rf dist out src/renderer/.next",
    "dev": "yarn run copy-icon && yarn run build:electron && electron .",
    "copy-icon": "cp assets/icon.icns node_modules/electron/dist/Electron.app/Contents/Resources/electron.icns",
    "build": "run-s build:*",
    "build:renderer": "next build src/renderer && next export src/renderer -o out/renderer/out",
    "build:electron": "tsc -p src/main",
    "dist": "yarn run build && electron-builder",
    "test": "jest",
    "lint": "run-p -l -c --aggregate-output lint:*",
    "lint:tsc-main": "tsc --noEmit -p src/main",
    "lint:tsc-renderer": "tsc --noEmit -p src/renderer",
    "lint:eslint": "eslint . --max-warnings 0",
    "lint:prettier": "prettier --check './src/**/*.{ts,tsx}'",
    "format": "run-s format:*",
    "format:eslint": "eslint --fix .",
    "format:prettier": "prettier --write './src/**/*.{ts,tsx}'"
  },
  "dependencies": {
    "@chakra-ui/react": "^1.8.8",
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "@fortawesome/fontawesome-svg-core": "^6.1.1",
    "@fortawesome/free-solid-svg-icons": "^6.1.1",
    "@fortawesome/react-fontawesome": "^0.1.18",
    "@google-cloud/bigquery": "^5.12.0",
    "@hokaccha/sql-formatter": "^1.4.0",
    "@monaco-editor/react": "^4.4.2",
    "deepmerge": "^4.2.2",
    "electron-is-dev": "latest",
    "electron-next": "latest",
    "framer-motion": "^6.3.0",
    "immer": "^9.0.12",
    "monaco-editor": "^0.33.0",
    "pretty-bytes": "^6.0.0",
    "react": "18.0.0",
    "react-dom": "18.0.0",
    "react-use": "^17.3.2",
    "swr": "^1.3.0",
    "uuid": "^8.3.2",
    "zod": "^3.14.4"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "17.0.25",
    "@types/react": "18.0.5",
    "@types/react-dom": "18.0.1",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "5.20.0",
    "@typescript-eslint/parser": "5.20.0",
    "electron": "18.1.0",
    "electron-builder": "23.0.3",
    "eslint": "8.13.0",
    "eslint-config-next": "12.1.5",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-react": "7.29.4",
    "eslint-plugin-react-hooks": "4.4.0",
    "jest": "^27.5.1",
    "next": "12.1.5",
    "npm-run-all": "latest",
    "prettier": "2.6.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "4.6.3"
  }
}
